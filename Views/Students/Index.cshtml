@model List<Students>;

<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a asp-controller="Home" asp-action="Index">Home</a>
		</li>
		<li class="breadcrumb-item">Index</li>
	</ol>
</nav>


<div class="container">
	<div class="row">
		<div class="col-xl-12 col-md-12 col-sm-12 d-flex justify-content-start">
			<a type="button" class="btn btn-primary" asp-action="UpSert" asp-controller="Students"><span class="fas fa-plus"></span>Agregar</a>
		</div>
		<div class="col-xl-12 col-md-12 col-ms-12 mt-3">
			<table class="table table-hover">
				<thead>
				<th>StudentId</th>
				<th>Name</th>
				<th>LastName</th>
				<th>Estado</th>
				<thead>Acciones</thead>
				</thead>
				<tbody>
					@{
						foreach (Students students in Model)
						{
							<tr>
								<td>@students.StudentId</td>
								<td>@students.Name</td>
								<td>@students.LastName</td>
								<td>
									@if (students.IsActive)
									{
										<span class="badge bg-success">Activo</span>
									}
									else
									{
										<span class="badge bg-danger">Inactivo</span>
									}
								</td>
								<td>
									<a type="button" class="btn btn-success" asp-action="View" asp-controller="Students" asp-route-id="@students.StudentId">
										<span class="fas fa-eye"></span>
									</a>
									<a type="button" class="btn btn-warning" asp-action="UpSert" asp-controller="Students" asp-route-id="@students.StudentId">
										<span class="fas fa-pencil"></span>
									</a>
									<a type="button" class="btn btn-danger" asp-action="Delete" asp-controller="Students" asp-route-id="@students.StudentId">
										<span class="fas fa-trash"></span>
									</a>
								</td>
							</tr>
						}
					}
				</tbody>
			</table>
		</div>
	</div>

</div>
